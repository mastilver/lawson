{
  "name": "lawson",
  "version": "1.0.0",
  "description": "yet another couchbase odm",
  "license": "MIT",
  "repository": "mastilver/lawson",
  "author": {
    "name": "Thomas Sileghem",
    "email": "th.sileghem@gmail.com",
    "url": "mastilver.com"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "xo && ava",
    "prebuild": "rimraf dist",
    "build": "babel lib --out-dir dist",
    "prepublish": "npm run build"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "keywords": [
    "couchbase",
    "couchnode",
    "couchdb",
    "lawson",
    "nosql",
    "ottoman",
    "orm",
    "database",
    "db",
    "odm"
  ],
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "couchbase": "^2.2.2",
    "cuid": "^1.3.8",
    "db-schema-validator": "^1.0.1",
    "pify": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-3": "^6.3.13",
    "rimraf": "^2.5.4",
    "xo": "^0.16.0"
  },
  "xo": {
    "space": 4,
    "rules": {
      "no-eq-null": 0,
      "eqeqeq": [
        2,
        "smart"
      ]
    }
  },
  "ava": {
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ]
  }
}
